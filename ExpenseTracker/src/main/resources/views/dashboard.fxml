<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.expensetracker.controller.ExpenseController">
    <top>
        <Label text="ðŸ’° Expense Tracker Dashboard" style="-fx-font-size:18px; -fx-font-weight:bold; -fx-padding:10;" />
    </top>

    <center>
        <VBox spacing="10" alignment="CENTER" >
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <HBox spacing="10">
                <TextField fx:id="categoryField" promptText="Category"/>
                <TextField fx:id="amountField" promptText="Amount"/>
                <DatePicker fx:id="datePicker" promptText="Date"/>
                <TextField fx:id="descriptionField" promptText="Description"/>
                <Button text="Add" onAction="#addExpense"/>
            </HBox>

            <TableView fx:id="expenseTable" prefHeight="300">
                <columns>
                    <TableColumn fx:id="categoryCol" text="Category" prefWidth="100"/>
                    <TableColumn fx:id="amountCol" text="Amount" prefWidth="100"/>
                    <TableColumn fx:id="dateCol" text="Date" prefWidth="100"/>
                    <TableColumn fx:id="descriptionCol" text="Description" prefWidth="200"/>
                </columns>
            </TableView>

            <HBox spacing="15" alignment="CENTER">
                <Button text="Show Chart" onAction="#showChart"/>
                <Button text="Export CSV" onAction="#exportCSV"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
